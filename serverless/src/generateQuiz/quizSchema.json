{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "quiz": {
            "type": "object",
            "properties": {
                "questions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "question": {
                                "type": "string"
                            },
                            "options": {
                                "type": "object",
                                "properties": {
                                    "a": {
                                        "type": "string"
                                    },
                                    "b": {
                                        "type": "string"
                                    },
                                    "c": {
                                        "type": "string"
                                    },
                                    "d": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "a",
                                    "b",
                                    "c",
                                    "d"
                                ]
                            },
                            "correctOption": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "question",
                            "options",
                            "correctOption"
                        ]
                    }
                }
            },
            "required": [
                "questions"
            ]
        }
    },
    "required": [
        "quiz"
    ]
}